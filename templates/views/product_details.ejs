<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Add Bootstrap CDN link for styles -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Add your head content here -->
</head>
<body class="container mt-4">

    <div class="jumbotron">
        <h1 class="display-4">Product Details</h1>

        <% if (products && products.length > 0) { %>
            <% products.forEach(function(product) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Product: <%= product.productbrand %></h5>
                        <p class="card-text">Model: <%= product.productmodel %></p>
                        <p class="card-text">Price: $<%= product.price %></p>
                        <p class="card-text">Quantity: <%= product.quantity %></p> <!-- Add this line for quantity -->
                        <!-- Add more details as needed -->

                        <!-- "Add to Cart" button -->
                        <form action="/add-to-cart" method="post">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="alert alert-warning">Product not available</p>
        <% } %>

    </div>

    <!-- Add Bootstrap JS and Popper.js CDN links if needed -->
    <!-- <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script> -->

</body>
</html>
